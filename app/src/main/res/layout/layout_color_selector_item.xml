<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="uiModel"
            type="com.duhapp.dnotes.features.add_or_update_category.ui.ColorItemUIModel" />

        <import type="com.duhapp.dnotes.NoteColor" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="@dimen/color_item_size"
            android:layout_height="@dimen/color_item_size"
            android:background="@drawable/rounded_background"
            app:cardCornerRadius="50dp"
            app:layoutBackground="@{uiModel.color.darkColor}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@drawable/rounded_background"
            tools:backgroundTint="@color/note_color_red_dark" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>