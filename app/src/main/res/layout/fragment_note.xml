<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.duhapp.dnotes.features.note.ui.NoteViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@{context.getColor(viewModel.uiState.baseNoteUIModel.category.color.color.lightColor)}"
        tools:background="@color/note_color_red_dark"
        android:paddingHorizontal="24dp"
        android:paddingTop="32dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium_margin"
            android:onClickListener="@{() -> viewModel.switchEditMode()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:lockIcon="@{viewModel.uiState.editableMode}"
            app:srcCompat="@drawable/edit" />

        <RelativeLayout
            android:id="@+id/category"
            android:layout_width="@dimen/category_list_item_icon_size"
            android:layout_height="@dimen/category_list_item_icon_size"
            android:layout_marginVertical="@dimen/small_margin"
            android:background="@drawable/rounded_alpha_background"
            android:onClick="@{() -> viewModel.categorySelectClicked()}"
            app:isLocked="@{viewModel.uiState.editableMode}"
            app:layout_constraintStart_toStartOf="@id/description"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/category_icon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="@={viewModel.uiState.baseNoteUIModel.category.emoji}"
                android:textColor="@color/white"
                tools:text="ðŸ˜€" />
        </RelativeLayout>

        <EditText
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_margin"
            android:backgroundTint="@color/transparent"
            android:hint="@string/Title"
            android:text="@={viewModel.uiState.baseNoteUIModel.title}"
            app:isLocked="@{viewModel.uiState.editableMode}"
            app:layout_constraintBottom_toBottomOf="@id/category"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/category"
            app:layout_constraintTop_toTopOf="@id/category" />

        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/transparent"
            android:hint="@string/Details"
            android:text="@={viewModel.uiState.baseNoteUIModel.body}"
            app:isLocked="@{viewModel.uiState.editableMode}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>