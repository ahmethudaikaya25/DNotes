<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="uiModel"
            type="com.duhapp.dnotes.features.add_or_update_category.ui.CategoryUIModel" />

        <variable
            name="menuClickListener"
            type="com.duhapp.dnotes.features.manage_category.ui.ManageCategoryFragment.MenuClickListener" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@{uiModel.colorId}"
            tools:background="@color/primary_color">

            <RelativeLayout
                android:id="@+id/category_icon_card"
                android:layout_width="@dimen/category_list_item_icon_size"
                android:layout_height="@dimen/category_list_item_icon_size"
                android:layout_margin="@dimen/small_margin"
                android:background="@drawable/rounded_backgroud"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/category_icon"
                    android:layout_width="19dp"
                    android:layout_height="22dp"
                    android:layout_centerInParent="true"
                    android:background="@color/transparent"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@{uiModel.emoji}"
                    android:textColor="@color/white"
                    tools:text="ðŸ˜€" />
            </RelativeLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/title"
                style="@style/text_sm_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/small_margin"
                android:layout_marginVertical="@dimen/small_margin"
                android:gravity="start"
                android:text="@{uiModel.name}"
                android:textColor="@color/white"
                app:layout_constraintEnd_toStartOf="@id/menu"
                app:layout_constraintStart_toEndOf="@id/category_icon_card"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Title" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/description"
                style="@style/text_sm_reg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/small_margin"
                android:layout_marginBottom="@dimen/small_margin"
                android:text="@{uiModel.description}"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@id/menu"
                app:layout_constraintStart_toEndOf="@id/category_icon_card"
                tools:text="Description" />

            <ImageButton
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:selectableItemBackground"
                android:importantForAccessibility="no"
                android:onClickListener="@{(v)-> menuClickListener.onMenuClick(uiModel, v)}"
                android:padding="@dimen/small_margin"
                android:src="@drawable/baseline_dehaze_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>